@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@if(Model._isBeta)
{
    <div class="text-center">
        <h1 class="display-4">This is a Beta Version.</h1>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">This is a Stable Version.</h1>
    </div>
}

<div class="text-center">
    <h1 class="display-4">This is a list of Products (Version-2).</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Product Product ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Product Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model._products)
            {
                <tr>
                    <td scope="row">@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>
